{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tree Categories! âœ…</h1>

    {% for category in categories %}
        <h2><a href="{{ path('categories') }}">{{ category.title }}</a></h2>
        {% for child in category.children %}
            <h3><a href="{{ path('category', {'categorySlug' : child.slug})}}">{{ child.title }}</a></h3>
            {% for product in child.products %}
                <h3><a href="{{ path('product', {'productSlug' : product.slug}) }}">{{ product.title }}</a></h3>
            {% endfor %}
            {% endfor %}
    {% endfor %}
</div>
{% endblock %}
